{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "quotes": [2, "double"],
    "camelcase": [2,
      {
        "properties": "always"
      }
    ],
    "strict": 0,
    "indent": [2, "tab"],
    "curly": [2, "multi-line"],
    "no-multiple-empty-lines": [1,
      {
        "max": 2
      }
    ],
    "max-len": [1, 80, 2],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "no-underscore-dangle": 0,
    "no-undef": 2,
    "eqeqeq": [2, "allow-null"],
    "semi": [2, "always"]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
